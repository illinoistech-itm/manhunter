 private static void addContent(Document document, InputStream is) =
throws IOException {
        try {
            InputStreamReader input =3D new InputStreamReader(is);
            document.add(Field.Text("contents", input ));
         }
        catch(Exception ex) {
            ex.printStackTrace();
        }
        finally {
            if( is !=3D null ) {
                is.close();
            }
        }
    }


