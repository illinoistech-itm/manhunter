         at java.io.RandomAccessFile.<init>(RandomAccessFile.java:143)
         at com.lucene.store.FSInputStream.<init>(FSDirectory.java:161)
         at com.lucene.store.FSDirectory.openFile(FSDirectory.java:145)
         at 
