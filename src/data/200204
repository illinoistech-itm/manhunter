Content-Type: application/octet-stream;
	name="TestQueryParser.java"
Content-Transfer-Encoding: quoted-printable
Content-Disposition: attachment;
	filename="TestQueryParser.java"

package de.tecmath.ma.dm;

import java.io.IOException;

import org.apache.lucene.analysis.SimpleAnalyzer;
import org.apache.lucene.queryParser.ParseException;
import org.apache.lucene.queryParser.QueryParser;
import org.apache.lucene.search.Hits;
import org.apache.lucene.search.IndexSearcher;
import org.apache.lucene.search.Query;


public class TestQueryParser {

	public static void main(String[] args) {
			=09
		String queryString =3D args[0];
	=09
		Query query =3D null;
	=09
		try {
			query =3D QueryParser.parse(queryString, "contents", new =
SimpleAnalyzer());
		} catch(ParseException e) {
		}
=09
		System.out.println("Query is: " + query);
		System.out.println("Searching for: " + query.toString("contents"));
	=09
		IndexSearcher searcher =3D null;
	=09
		if (searcher =3D=3D null) {
			try {
				searcher =3D new IndexSearcher("index-fast");
			} catch (IOException e) {
				System.out.println(e.getMessage());
			}
		}

		Hits hits =3D null;
		try {
			hits =3D searcher.search(query);
		} catch(IOException e) {
		}

		System.out.println(hits.length() + " total matching documents");
	}
}
