import java.io.*;

public class PageBreaker
{
	private final String TEST_FILE =3D =
"E:\\development\\projects\\bookclean\\test\\book1\\ch01\\0001-0005.html"=
;
=09
	private StringBuffer htmlContent =3D null;
=09
	public static void main( String [] args ) throws IOException
	{
		PageBreaker pb =3D new PageBreaker();
	=09
		pb.parse();
	}
=09
	private void parse()
	{
		htmlContent =3D new StringBuffer(readObject(TEST_FILE));
	=09
		split();
	}
=09
	private void split()
	{
		String content =3D htmlContent.toString();
	=09
		int startTagPos =3D 0;=09
		int endTagPos =3D 0;
		int findPos =3D 0;
		boolean inTag =3D false;
	=09
		int partID =3D 0;
	=09
		while(startTagPos !=3D -1)
		{
			// find the start of a tag
			startTagPos =3D content.indexOf("<",findPos);
		=09
			if(startTagPos !=3D -1)
			{
				if(startTagPos > endTagPos +1 )
				{
					// this is the data is exposed here
					System.out.println(partID+ "" + =
content.substring(endTagPos+1,startTagPos));
					partID++;
					//System.out.println();
				}
			=09
				if(inTag =3D=3D false)
				{
					inTag =3D true;
				}
			=09
				// ok in the tag
				if(inTag)
				{
					// find the end of the tag
					endTagPos =3D content.indexOf(">",startTagPos);
				=09
					if(endTagPos !=3D -1)
					{
						// end of the tag found
						inTag =3D false;
						// this is the tags are exposed here
						printTag(partID+ "" + content.substring(startTagPos,endTagPos+1));
						partID++;
						findPos =3D endTagPos;
					}
				}
			=09
			=09
			=09
				//System.out.println(findPos);
			=09
			=09
			}
		}
	}
=09
	private void printTag(String tag)
	{
		System.out.println(tag);
	}
=09
	private String readObject(String objectid)
	{
		int len =3D 0;
		String objectString =3D "";
		try
		{
			len =3D (int)(new File(objectid)).length();
		=09
			FileInputStream fis =3D new FileInputStream(objectid);
		=09
			byte buf[] =3D new byte[len];
		=09
			fis.read(buf);
		=09
			fis.close();
		=09
			int cnt =3D 0;
		=09
			for(int i =3D 0; i < len; i++)
				if(buf[i] =3D=3D 10)
					cnt++;
		=09
			objectString =3D new String(buf, 0, len);
		}
		catch(IOException e)
		{
			System.err.println("file error " + e);
		}
		return objectString;
	}
}


