missing?=20
=20
       =20
        Term a =3D new Term("field", "a");
        Term b =3D new Term("field", "b");
        Term c =3D new Term("field", "c");       =20
       =20
        class MyCollector extends HitCollector
        {
            public final void collect(int doc, float score)
            {
               // need to know all matching term positions for 'doc'.
              // build a bit vector marking the position of each matched =
term.
            }
        }
