System.out.println("reader.indexExists(): " + =
reader.indexExists(index));

System.out.println("term field: " + new Term("id", identifier).field());
System.out.println("term text: " + new Term("id", identifier).text());
System.out.println("reader.docFreq: " + reader.docFreq(new Term("id",
identifier))); =20
System.out.println("deleting target now...");   =20
    int deleted_num =3D reader.delete(new Term("id", identifier));
System.out.println("*** deleted_num: " + deleted_num);   =20
    reader.close();
    try {
      IndexWriter writer =3D new IndexWriter(index, new =
StandardAnalyzer(),
false);
      String ident =3D identifier;
      Document doc =3D new Document();
      doc.add(Field.Text("id", identifier));     =20
      doc.add(Field.Text("label", new_label));=20
