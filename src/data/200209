import org.apache.lucene.analysis.*;=0A=
import org.apache.lucene.index.*;=0A=
import org.apache.lucene.search.*;=0A=
import org.apache.lucene.queryParser.*;=0A=
=0A=
/**=0A=
 *=0A=
 * @author  alex=0A=
 */=0A=
public class TestField {=0A=
    =0A=
    /** Creates a new instance of TestField */=0A=
    public TestField() {=0A=
    }=0A=
    =0A=
    /**=0A=
     * @param args the command line arguments=0A=
     */=0A=
    =0A=
    public static void main(String[] args) throws Exception {=0A=
        Directory directory =3D new RAMDirectory();=0A=
        Analyzer analyzer =3D new WhitespaceAnalyzer();=0A=
        IndexWriter writer =3D new IndexWriter(directory, analyzer, =
true);=0A=
        =0A=
        Document d =3D new Document();=0A=
        int i=3D0;=0A=
        =0A=
        for (i=3D0; i<10; i++) {=0A=
            d.add(Field.Keyword("nr", Integer.toString(i)));=0A=
            d.add(Field.Keyword("element","POST"));=0A=
            writer.addDocument(d);=0A=
        }=0A=
        d.add(Field.Keyword("nr", Integer.toString(i)));=0A=
        d.add(Field.Keyword("element", "GET"));=0A=
        writer.addDocument(d);=0A=
        writer.close();=0A=
        =0A=
        =0A=
        Searcher searcher =3D new IndexSearcher(directory);=0A=
        Hits hits =3D null;=0A=
=0A=
        BooleanQuery bq =3D new BooleanQuery();=0A=
        bq.add(new TermQuery(new Term("element", "POST")), true, false);=0A=
        bq.add(new TermQuery(new Term("nr", "3")), true, false);=0A=
        =0A=
        System.out.println("Query: " + bq.toString("nr, element"));=0A=
        hits =3D searcher.search(bq);=0A=
        if (hits.length() =3D=3D 0)=0A=
            System.out.println("\nNo records found!");=0A=
        else=0A=
            for (i=3D0; i<hits.length(); i++) {=0A=
                d =3D hits.doc(i);=0A=
                System.out.println(hits.score(i) + " " + =
d.getField("nr") + " " + d.getField("element"));=0A=
            }=0A=
        =0A=
        searcher.close();=0A=
    }=0A=
}=0A=


