class AndFilter {

   final Filter a;

   final Filter b;

   public AndFilter(Filter a, Filter b) {

     this.a = a;

     this.b = b;

   }

   BitSet bits(IndexReader r) {

     return b.bits(r).and(a.bits(r));  // Correct this line I am getting
some error.

   }

}

 

 

