import java.io.IOException;=0A=
import java.util.Vector;=0A=
import java.util.BitSet;=0A=
import org.apache.lucene.document.Document;=0A=
import org.apache.lucene.index.IndexReader;=0A=
=0A=
/** A ranked list of documents, used to hold search results. */=0A=
public final class Hits {=0A=
  private Query query;=0A=
  private Searcher searcher;=0A=
  private Filter filter =3D null;=0A=
=0A=
  private int length;				  // the total number of hits=0A=
  private Vector hitDocs =3D new Vector();	  // cache of hits =
retrieved=0A=
=0A=
  private HitDoc first;				  // head of LRU cache=0A=
  private HitDoc last;				  // tail of LRU cache=0A=
  private int numDocs =3D 0;			  // number cached=0A=
  private int maxDocs =3D 200;			  // max to cache=0A=
=0A=
  Hits(Searcher s, Query q, Filter f) throws IOException {=0A=
    query =3D q;=0A=
    searcher =3D s;=0A=
    filter =3D f;=0A=
    getMoreDocs(50);				  // retrieve 100 initially=0A=
  }=0A=
=0A=
  // Tries to add new documents to hitDocs.=0A=
  // Ensures that the hit numbered <code>min</code> has been =
retrieved.=0A=
  private final void getMoreDocs(int min) throws IOException {=0A=
    if (hitDocs.size() > min)=0A=
      min =3D hitDocs.size();=0A=
=0A=
    int n =3D min * 2;				  // double # retrieved=0A=
    TopDocs topDocs =3D searcher.search(query, filter, n);=0A=
    length =3D topDocs.totalHits;=0A=
    ScoreDoc[] scoreDocs =3D topDocs.scoreDocs;=0A=
=0A=
    float scoreNorm =3D 1.0f;=0A=
    if (length > 0 && scoreDocs[0].score > 1.0f)=0A=
      scoreNorm =3D 1.0f / scoreDocs[0].score;=0A=
=0A=
    int end =3D scoreDocs.length < length ? scoreDocs.length : =
length;=0A=
    for (int i =3D hitDocs.size(); i < end; i++)=0A=
      hitDocs.addElement(new HitDoc(scoreDocs[i].score*scoreNorm,=0A=
				    scoreDocs[i].doc));=0A=
  }=0A=
=0A=
  /** Returns the total number of hits available in this set. */=0A=
  public final int length() {=0A=
    return length;=0A=
  }=0A=
=0A=
  /** Returns the nth document in this set.=0A=
    <p>Documents are cached, so that repeated requests for the same =
element may=0A=
    return the same Document object. */=0A=
  public final Document doc(int n) throws IOException {=0A=
    HitDoc hitDoc =3D hitDoc(n);=0A=
=0A=
    // Update LRU cache of documents=0A=
    remove(hitDoc);				  // remove from list, if there=0A=
    addToFront(hitDoc);				  // add to front of list=0A=
    if (numDocs > maxDocs) {			  // if cache is full=0A=
      HitDoc oldLast =3D last;=0A=
      remove(last);				  // flush last=0A=
      oldLast.doc =3D null;			  // let doc get gc'd=0A=
    }=0A=
=0A=
    if (hitDoc.doc =3D=3D null)=0A=
      hitDoc.doc =3D searcher.doc(hitDoc.id);	  // cache miss: read =
document=0A=
=0A=
    return hitDoc.doc;=0A=
  }=0A=
=0A=
  /** Returns the score for the nth document in this set. */=0A=
  public final float score(int n) throws IOException {=0A=
    return hitDoc(n).score;=0A=
  }=0A=
=0A=
  private final HitDoc hitDoc(int n) throws IOException {=0A=
    if (n >=3D length)=0A=
      throw new IndexOutOfBoundsException("Not a valid hit number: " + =
n);=0A=
    if (n >=3D hitDocs.size())=0A=
      getMoreDocs(n);=0A=
=0A=
    return (HitDoc)hitDocs.elementAt(n);=0A=
  }=0A=
=0A=
  private final void addToFront(HitDoc hitDoc) {  // insert at front of =
cache=0A=
    if (first =3D=3D null)=0A=
      last =3D hitDoc;=0A=
    else=0A=
      first.prev =3D hitDoc;=0A=
=0A=
    hitDoc.next =3D first;=0A=
    first =3D hitDoc;=0A=
    hitDoc.prev =3D null;=0A=
=0A=
    numDocs++;=0A=
  }=0A=
=0A=
  private final void remove(HitDoc hitDoc) {	  // remove from cache=0A=
    if (hitDoc.doc =3D=3D null)			  // it's not in the list=0A=
      return;					  // abort=0A=
=0A=
    if (hitDoc.next =3D=3D null)=0A=
      last =3D hitDoc.prev;=0A=
    else=0A=
      hitDoc.next.prev =3D hitDoc.prev;=0A=
=0A=
    if (hitDoc.prev =3D=3D null)=0A=
      first =3D hitDoc.next;=0A=
    else=0A=
      hitDoc.prev.next =3D hitDoc.next;=0A=
=0A=
    numDocs--;=0A=
  }=0A=
}=0A=
=0A=
final class HitDoc {=0A=
  float score;=0A=
  int id;=0A=
  Document doc =3D null;=0A=
=0A=
  HitDoc next;					  // in doubly-linked cache=0A=
  HitDoc prev;					  // in doubly-linked cache=0A=
=0A=
  HitDoc(float s, int i) {=0A=
    score =3D s;=0A=
    id =3D i;=0A=
  }=0A=
}=0A=


