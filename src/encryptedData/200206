File docDir =3D new File(dirBase);
String[] docFiles  =3D docDir.list();
InputStreamReader isr;
InputStream is;
Document doc;
for(int i=3D0;i<docFiles.length;i++)
   {=20
  File tempFile =3D new File(dirBase + "\\" + docFiles[i]);
  if(tempFile.isFile()=3D=3Dtrue)
    {
    System.out.println("Indexing File :" + docFiles[i]);
    is =3D new FileInputStream(tempFile);
    isr=3Dnew InputStreamReader(is,"utf-8");
       doc=3D new Document();
       doc.add(Field.UnIndexed("path",tempFile.toString()));
       doc.add(Field.Text("abc",(Reader)isr));
       doc.add(Field.Text("all","sansui"));
       iw.addDocument(doc);
       is.close();
       isr.close();
      doc=3Dnull;
          }
    }
     iw.close();
     is=3Dnull;
     isr=3Dnull;
     iw=3Dnull;
     docDir=3Dnull;
=20
     System.out.println("Indexing Complete");

/************************************************************************=
**************************************************************/

