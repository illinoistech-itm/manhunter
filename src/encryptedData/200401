> > >       int remainder = (int)is.length();
> > >       while (remainder > 0) {
> > >         int chunklen = (remainder > MAX_CHUNK_SIZE ? MAX_CHUNK_SIZE :
> > remainde!
> > >         is.readBytes(buf, 0, chunklen);
> > >         os.writeBytes(buf, chunklen);
> > >         remainder -= chunklen;
> > >       }
> > >
> > >       // graceful cleanup
> > >       is.close();
> > >       os.close();
> > >     }
> > >   }
> > >
> > >
> > >
> >
> >
> >
> >
> > ---------------------------------------------------------------------
