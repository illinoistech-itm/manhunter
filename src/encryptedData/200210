import org.apache.lucene.store.*;=0A=
import org.apache.lucene.store.InputStream;=0A=
import org.apache.lucene.store.OutputStream;=0A=
=0A=
import java.io.*;=0A=
=0A=
public class LockingFSDirectory extends Directory {=0A=
=0A=
    private final Directory o_underlyingDir;=0A=
    private final File o_dir;=0A=
=0A=
    /**=0A=
     * Returns the directory instance for the named location.=0A=
     */=0A=
    public static LockingFSDirectory getDirectory(String path, boolean =
create)=0A=
            throws IOException {=0A=
        return getDirectory(new File(path), create);=0A=
    }=0A=
=0A=
    /**=0A=
     * Returns the directory instance for the named location.=0A=
     */=0A=
    public static LockingFSDirectory getDirectory(File file, boolean =
create)=0A=
            throws IOException {=0A=
        return new LockingFSDirectory(file, create);=0A=
    }=0A=
=0A=
=0A=
    private LockingFSDirectory(File p_file, boolean p_create) throws =
IOException {=0A=
        o_underlyingDir =3D FSDirectory.getDirectory(p_file, p_create);=0A=
        o_dir =3D new File(p_file.getCanonicalPath());=0A=
    }=0A=
=0A=
    /** Returns an array of strings, one for each file in the directory. =
*/=0A=
    public final String[] list() throws IOException {=0A=
        return o_underlyingDir.list();=0A=
    }=0A=
=0A=
    /** Returns true iff a file with the given name exists. */=0A=
    public final boolean fileExists(String name) throws IOException {=0A=
        return o_underlyingDir.fileExists(name);=0A=
    }=0A=
=0A=
    /** Returns the time the named file was last modified. */=0A=
    public final long fileModified(String name) throws IOException {=0A=
        return o_underlyingDir.fileModified(name);=0A=
    }=0A=
=0A=
    /** Returns the time the named file was last modified. */=0A=
    public static final long fileModified(File directory, String name)=0A=
            throws IOException {=0A=
        return FSDirectory.fileModified(directory, name);=0A=
    }=0A=
=0A=
    /** Returns the length in bytes of a file in the directory. */=0A=
    public final long fileLength(String name) throws IOException {=0A=
        return fileLength(name);=0A=
    }=0A=
=0A=
    /** Removes an existing file in the directory. */=0A=
    public final void deleteFile(String name) throws IOException {=0A=
        o_underlyingDir.deleteFile(name);=0A=
    }=0A=
=0A=
    /** Renames an existing file in the directory. */=0A=
    public final synchronized void renameFile(String from, String to)=0A=
            throws IOException {=0A=
        o_underlyingDir.renameFile(from, to);=0A=
    }=0A=
=0A=
    /** Creates a new, empty file in the directory with the given name.=0A=
     Returns a stream writing this file. */=0A=
    public final OutputStream createFile(String name) throws IOException =
{=0A=
        return o_underlyingDir.createFile(name);=0A=
    }=0A=
=0A=
    /** Returns a stream reading an existing file. */=0A=
    public final InputStream openFile(String name) throws IOException {=0A=
        return o_underlyingDir.openFile(name);=0A=
    }=0A=
=0A=
    /** Construct a {@link Lock}.=0A=
     * @param name the name of the lock file=0A=
     */=0A=
    public final Lock makeLock(String name) {=0A=
        final String lockFile =3D new File(o_dir, name).getPath();=0A=
        return new Lock() {=0A=
            public boolean obtain() throws IOException {=0A=
                return FSLockService.getService().acquireLock(lockFile);=0A=
            }=0A=
=0A=
            public void release() {=0A=
                FSLockService.getService().releaseLock(lockFile);=0A=
            }=0A=
=0A=
            public String toString() {=0A=
                return "Lock@" + lockFile;=0A=
            }=0A=
        };=0A=
    }=0A=
=0A=
    /** Closes the store to future operations. */=0A=
    public final synchronized void close() throws IOException {=0A=
        o_underlyingDir.close();=0A=
    }=0A=
=0A=
    /** For debug output. */=0A=
    public String toString() {=0A=
        return o_underlyingDir.toString();=0A=
    }=0A=
}=0A=

