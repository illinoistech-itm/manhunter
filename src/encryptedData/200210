import org.apache.log4j.Category;=0A=
=0A=
import java.io.*;=0A=
=0A=
abstract class FSLockService {=0A=
    private static final Category s_logger =3D =
Category.getInstance(FSLockService.class.getName());=0A=
    private static FSLockService s_service;=0A=
=0A=
    static {=0A=
        try{=0A=
            System.loadLibrary("fslock");=0A=
            s_logger.info("Using native implementation of =
FSLockService");=0A=
            s_service =3D new NativeLockService();=0A=
        }catch(UnsatisfiedLinkError err){=0A=
            s_logger.info("Using java implementation of FSLockService");=0A=
            s_service =3D new JavaLockService();=0A=
        }=0A=
    }=0A=
=0A=
    /**=0A=
     *  Acquire a lock=0A=
     *=0A=
     *  @param p_lock File to use for locking=0A=
     */=0A=
    public abstract boolean acquireLock(String p_lock);=0A=
=0A=
=0A=
    /**=0A=
     *  Releases a lock=0A=
     *=0A=
     *  @param p_lock File to use for locking=0A=
     */=0A=
    public void releaseLock(String p_lock){=0A=
        new File(p_lock).delete();=0A=
    }=0A=
=0A=
    /**=0A=
     *  Get an instance of lock service=0A=
     */=0A=
    public static FSLockService getService(){=0A=
        return s_service;=0A=
    }=0A=
=0A=
=0A=
    /**=0A=
     *  Native implementation of locking service=0A=
     */=0A=
    private static class NativeLockService extends FSLockService=0A=
    {=0A=
        public native boolean acquireLock(String p_lock);=0A=
    }=0A=
=0A=
=0A=
    /**=0A=
     *  Java implementation of locking service=0A=
     */=0A=
    private static class JavaLockService extends FSLockService=0A=
    {=0A=
        public boolean acquireLock(String p_lock){=0A=
            try{=0A=
                return new File(p_lock).createNewFile();=0A=
            }catch(IOException ex){=0A=
                ex.printStackTrace();=0A=
                return false;=0A=
            }=0A=
        }=0A=
    }=0A=
}=0A=

