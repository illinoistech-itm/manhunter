JNIEXPORT jboolean JNICALL =
Java_FSLockService_00024NativeLockService_acquireLock=0A=
  (JNIEnv *env, jobject obj, jstring fname){=0A=
=0A=
    const char *filename =3D (*env)->GetStringUTFChars(env, fname, 0);=0A=
=0A=
    char tempfname[256];=0A=
    char fullname[512];=0A=
=0A=
    int file;=0A=
    jboolean x_res =3D JNI_FALSE;=0A=
    struct stat fstat;=0A=
=0A=
    // form the directory name=0A=
    strcpy (fullname,filename);=0A=
    *(strrchr(fullname,'/')+1) =3D 0;=0A=
=0A=
    gethostname(tempfname);=0A=
    sprintf(tempfname+strlen(tempfname), "%d", rand());=0A=
    strcat (fullname,tempfname);=0A=
=0A=
    file =3D open(fullname, O_CREAT);=0A=
    if ( file>=3D0 ) {=0A=
	close(file);=0A=
	x_res=3D!link(fullname, filename);=0A=
	if(!x_res){=0A=
	    stat(fullname, &fstat);=0A=
	    if(fstat.st_nlink=3D=3D2) x_res=3DJNI_TRUE;=0A=
	}=0A=
	(*env)->ReleaseStringUTFChars(env, fname, filename);=0A=
	unlink(fullname);=0A=
    }=0A=
    return x_res;=0A=
}=0A=


