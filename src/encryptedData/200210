public class SearchTest{=0A=
    =0A=
    public int search ()=0A=
        throws Exception{=0A=
        List x_res =3D new ArrayList();=0A=
=0A=
        // create the lucene query from the first channel analyzer=0A=
        Analyzer x_analyzer =3D new =
org.apache.lucene.analysis.standard.StandardAnalyzer();=0A=
=0A=
        Query x_query =3D QueryParser.parse("one OR two OR three OR four =
OR six OR seven OR eight OR nine OR ten",=0A=
                "unstored", x_analyzer);=0A=
=0A=
        Hits x_hits;=0A=
=0A=
        Searcher x_msearcher =3D new IndexSearcher("index");=0A=
        x_hits =3D x_msearcher.search(x_query);=0A=
=0A=
        for (int i=3D0; i<x_hits.length(); i++ ) {=0A=
            x_res.add(x_hits.doc(i).get("document_id"));=0A=
        }=0A=
        x_msearcher.close();=0A=
        return x_hits.length();=0A=
    }=0A=
    =0A=
=0A=
    public static void main(String[] args) throws Exception{=0A=
        IndexWriter writer =3D new IndexWriter("index", new =
StandardAnalyzer(), true);=0A=
        for(int i=3D0; i<99; i++){=0A=
            Document doc =3D new Document();=0A=
            doc.add(Field.UnIndexed("document_id", ""+i));=0A=
            doc.add(Field.UnStored("unstored", =
DocumentGenerator.randomText(500, 500)));=0A=
            writer.addDocument(doc);=0A=
        }=0A=
        writer.close();=0A=
=0A=
=0A=
        final SearchTest ss =3D new SearchTest();=0A=
        for(int i=3D0; i<50; i++){=0A=
            new Thread(){=0A=
                public void run(){=0A=
                    try{=0A=
                        for(int i=3D0; i<50; i++){=0A=
                            System.out.println("found " + ss.search() + =
