import java.io.Serializable;=0A=
import java.io.IOException;=0A=
import java.util.Vector;=0A=
import java.util.Hashtable;=0A=
import java.util.Enumeration;=0A=
=0A=
import org.apache.lucene.store.Directory;=0A=
import org.apache.lucene.store.InputStream;=0A=
import org.apache.lucene.store.OutputStream;=0A=
=0A=
//-----------------------------------------------------------------------=
---------------------------------------=0A=
=0A=
final public class SerializableRAMDirectory extends Directory implements =
Serializable {=0A=
=0A=
	Hashtable files =3D new Hashtable();=0A=
=0A=
	public SerializableRAMDirectory() {=0A=
		}=0A=
=0A=
	/** Returns an array of strings, one for each file in the directory. */=0A=
	public final String[] list() {=0A=
		String[] result =3D new String[files.size()];=0A=
		int i =3D 0;=0A=
		Enumeration names =3D files.keys();=0A=
		while (names.hasMoreElements()) {=0A=
			result[i++] =3D (String)names.nextElement();=0A=
			}=0A=
		return result;=0A=
		}=0A=
=0A=
	/** Returns true iff the named file exists in this directory. */=0A=
	public final boolean fileExists(String name) {=0A=
		SerializableRAMFile file =3D (SerializableRAMFile)files.get(name);=0A=
		return file !=3D null;=0A=
		}=0A=
=0A=
	/** Returns the time the named file was last modified. */=0A=
	public final long fileModified(String name) throws IOException {=0A=
		SerializableRAMFile file =3D (SerializableRAMFile)files.get(name);=0A=
		return file.lastModified;=0A=
		}=0A=
=0A=
	/** Returns the length in bytes of a file in the directory. */=0A=
	public final long fileLength(String name) {=0A=
		SerializableRAMFile file =3D (SerializableRAMFile)files.get(name);=0A=
		return file.length;=0A=
		}=0A=
=0A=
	/** Removes an existing file in the directory. */=0A=
	public final void deleteFile(String name) {=0A=
		files.remove(name);=0A=
		}=0A=
=0A=
	/** Removes an existing file in the directory. */=0A=
	public final void renameFile(String from, String to) {=0A=
		SerializableRAMFile file =3D (SerializableRAMFile)files.get(from);=0A=
		files.remove(from);=0A=
		files.put(to, file);=0A=
		}=0A=
=0A=
	/** Creates a new, empty file in the directory with the given name.=0A=
		Returns a stream writing this file. */=0A=
	public final OutputStream createFile(String name) {=0A=
		SerializableRAMFile file =3D new SerializableRAMFile();=0A=
		files.put(name, file);=0A=
		return new SerializableRAMOutputStream(file);=0A=
		}=0A=
=0A=
	/** Returns a stream reading an existing file. */=0A=
	public final InputStream openFile(String name) {=0A=
		SerializableRAMFile file =3D (SerializableRAMFile)files.get(name);=0A=
		return new SerializableRAMInputStream(file);=0A=
		}=0A=
=0A=
	/** Construct a {@link Lock}.=0A=
	 * @param name the name of the lock file=0A=
	 */=0A=
	public final Lock makeLock(final String name) {=0A=
		return new Lock() {=0A=
			//--=0A=
			public boolean obtain() throws IOException {=0A=
				synchronized (files) {=0A=
					if (!fileExists(name)) {=0A=
						createFile(name).close();=0A=
						return true;=0A=
						}=0A=
					return false;=0A=
					}=0A=
				}=0A=
			public void release() {=0A=
				deleteFile(name);=0A=
				}=0A=
			};=0A=
		   //--=0A=
		}=0A=
=0A=
	/** Closes the store to future operations. */=0A=
	public final void close() {=0A=
		}=0A=
	}=0A=
=0A=
//-----------------------------------------------------------------------=
---------------------------------------=0A=
=0A=
final class SerializableRAMInputStream extends InputStream implements =
Cloneable {=0A=
	SerializableRAMFile file;=0A=
	int pointer =3D 0;=0A=
=0A=
	public SerializableRAMInputStream(SerializableRAMFile f) {=0A=
		file =3D f;=0A=
		length =3D file.length;=0A=
		}=0A=
=0A=
	/** InputStream methods */=0A=
	public final void readInternal(byte[] dest, int destOffset, int len) {=0A=
		int remainder =3D len;=0A=
		int start =3D pointer;=0A=
		while (remainder !=3D 0) {=0A=
			int bufferNumber =3D start/InputStream.BUFFER_SIZE;=0A=
			int bufferOffset =3D start%InputStream.BUFFER_SIZE;=0A=
			int bytesInBuffer =3D InputStream.BUFFER_SIZE - bufferOffset;=0A=
			int bytesToCopy =3D bytesInBuffer >=3D remainder ? remainder : =
bytesInBuffer;=0A=
			byte[] buffer =3D (byte[])file.buffers.elementAt(bufferNumber);=0A=
			System.arraycopy(buffer, bufferOffset, dest, destOffset, bytesToCopy);=0A=
			destOffset +=3D bytesToCopy;=0A=
			start +=3D bytesToCopy;=0A=
			remainder -=3D bytesToCopy;=0A=
			}=0A=
		pointer +=3D len;=0A=
		}=0A=
=0A=
	public final void close() {=0A=
		}=0A=
=0A=
	/** Random-access methods */=0A=
	public final void seekInternal(long pos) {=0A=
		pointer =3D (int)pos;=0A=
		}=0A=
	}=0A=
=0A=
//-----------------------------------------------------------------------=
---------------------------------------=0A=
=0A=
final class SerializableRAMOutputStream extends OutputStream {=0A=
	SerializableRAMFile file;=0A=
	int pointer =3D 0;=0A=
=0A=
	public SerializableRAMOutputStream(SerializableRAMFile f) {=0A=
		file =3D f;=0A=
		}=0A=
=0A=
	/** output methods: */=0A=
	public final void flushBuffer(byte[] src, int len) {=0A=
		int bufferNumber =3D pointer/OutputStream.BUFFER_SIZE;=0A=
		int bufferOffset =3D pointer%OutputStream.BUFFER_SIZE;=0A=
		int bytesInBuffer =3D OutputStream.BUFFER_SIZE - bufferOffset;=0A=
		int bytesToCopy =3D bytesInBuffer >=3D len ? len : bytesInBuffer;=0A=
=0A=
		if (bufferNumber =3D=3D file.buffers.size())=0A=
			file.buffers.addElement(new byte[OutputStream.BUFFER_SIZE]);=0A=
=0A=
		byte[] buffer =3D (byte[])file.buffers.elementAt(bufferNumber);=0A=
		System.arraycopy(src, 0, buffer, bufferOffset, bytesToCopy);=0A=
=0A=
		if (bytesToCopy < len) {			  // not all in one buffer=0A=
			int srcOffset =3D bytesToCopy;=0A=
			bytesToCopy =3D len - bytesToCopy;		  // remaining bytes=0A=
			bufferNumber++;=0A=
			if (bufferNumber =3D=3D file.buffers.size())=0A=
				file.buffers.addElement(new byte[OutputStream.BUFFER_SIZE]);=0A=
			buffer =3D (byte[])file.buffers.elementAt(bufferNumber);=0A=
			System.arraycopy(src, srcOffset, buffer, 0, bytesToCopy);=0A=
			}=0A=
		pointer +=3D len;=0A=
		if (pointer > file.length)=0A=
			file.length =3D pointer;=0A=
=0A=
		file.lastModified =3D System.currentTimeMillis();=0A=
		}=0A=
=0A=
	public final void close() throws IOException {=0A=
		super.close();=0A=
		}=0A=
=0A=
	/** Random-access methods */=0A=
	public final void seek(long pos) throws IOException {=0A=
		super.seek(pos);=0A=
		pointer =3D (int)pos;=0A=
		}=0A=
	public final long length() throws IOException {=0A=
		return file.length;=0A=
		}=0A=
	}=0A=
=0A=
//-----------------------------------------------------------------------=
---------------------------------------=0A=
=0A=
final class SerializableRAMFile implements Serializable {=0A=
	Vector buffers =3D new Vector();=0A=
	long length;=0A=
	long lastModified =3D System.currentTimeMillis();=0A=
	}=0A=
=0A=
