import org.apache.lucene.analysis.Analyzer;=0A=
import org.apache.lucene.queryParser.CharStream;=0A=
import org.apache.lucene.queryParser.ParseException;=0A=
import org.apache.lucene.queryParser.QueryParser;=0A=
import org.apache.lucene.queryParser.QueryParserTokenManager;=0A=
import org.apache.lucene.search.BooleanQuery;=0A=
import org.apache.lucene.search.Query;=0A=
=0A=
/**=0A=
 * A QueryParser which constructs queries to search multiple fields.=0A=
 *=0A=
 * @author <a href=3D"mailto:kelvin@relevanz.com">Kelvin Tan</a>=0A=
 * @version $Revision: 1.2 $=0A=
 */=0A=
public class MultiFieldQueryParser extends QueryParser=0A=
{=0A=
    public static final int NORMAL_FIELD =3D 0;=0A=
    public static final int REQUIRED_FIELD =3D 1;=0A=
    public static final int PROHIBITED_FIELD =3D 2;=0A=
=0A=
    public MultiFieldQueryParser(QueryParserTokenManager tm)=0A=
    {=0A=
        super(tm);=0A=
    }=0A=
=0A=
    public MultiFieldQueryParser(CharStream stream)=0A=
    {=0A=
        super(stream);=0A=
    }=0A=
=0A=
    public MultiFieldQueryParser(String f, Analyzer a)=0A=
    {=0A=
        super(f, a);=0A=
    }=0A=
=0A=
    /**=0A=
     * <p>=0A=
     * Parses a query which searches on the fields specified.=0A=
     * <p>=0A=
     * If x fields are specified, this effectively constructs:=0A=
     * <pre>=0A=
     * <code>=0A=
     * ({field1}:{query}) ({field2}:{query}) =
({field3}:{query})...({fieldx}:{query})=0A=
     * </code>=0A=
     * </pre>=0A=
     *=0A=
     * @param query Query string to parse=0A=
     * @param fields Fields to search on=0A=
     * @param analyzer Analyzer to use=0A=
     */=0A=
    public static Query parse(String query, String[] fields, Analyzer =
analyzer) throws ParseException=0A=
    {=0A=
        BooleanQuery bQuery =3D new BooleanQuery();=0A=
        for (int i =3D 0; i < fields.length; i++)=0A=
        {=0A=
            Query q =3D parse(query, fields[i], analyzer);=0A=
            bQuery.add(q, false, false);=0A=
        }=0A=
        return bQuery;=0A=
    }=0A=
=0A=
    /**=0A=
     * <p>=0A=
     * Parses a query, searching on the fields specified.=0A=
     * Use this if you need to specify certain fields as required,=0A=
     * and others as prohibited.=0A=
     * <p><pre>=0A=
     * Usage:=0A=
     * <code>=0A=
     * String[] fields =3D {"filename", "contents", "description"};=0A=
     * int[] flags =3D {MultiFieldQueryParser.NORMAL_FIELD,=0A=
     *                MultiFieldQueryParser.REQUIRED_FIELD,=0A=
     *                MultiFieldQueryParser.PROHIBITED_FIELD,};=0A=
     * parse(query, fields, flags, analyzer);=0A=
     * </code>=0A=
     * </pre>=0A=
     *<p>=0A=
     * The code above would construct a query:=0A=
     * <pre>=0A=
     * <code>=0A=
     * (filename:{query}) +(contents:{query}) -(description:{query})=0A=
     * </code>=0A=
     * </pre>=0A=
     *=0A=
     * @param query Query string to parse=0A=
     * @param fields Fields to search on=0A=
     * @param flags Flags describing the fields=0A=
     * @param analyzer Analyzer to use=0A=
     */=0A=
    public static Query parse(String query, String[] fields, int[] =
flags, Analyzer analyzer) throws ParseException=0A=
    {=0A=
        BooleanQuery bQuery =3D new BooleanQuery();=0A=
        for (int i =3D 0; i < fields.length; i++)=0A=
        {=0A=
            Query q =3D parse(query, fields[i], analyzer);=0A=
            int flag =3D flags[i];=0A=
            switch (flag)=0A=
            {=0A=
                case REQUIRED_FIELD:=0A=
                    bQuery.add(q, true, false);=0A=
                    break;=0A=
                case PROHIBITED_FIELD:=0A=
                    bQuery.add(q, false, true);=0A=
                    break;=0A=
                default:=0A=
                    bQuery.add(q, false, false);=0A=
                    break;=0A=
            }=0A=
        }=0A=
        return bQuery;=0A=
    }=0A=
}=0A=
=0A=

------=_NextPart_000_007C_01C1B55C.010AFAC0
Content-Type: application/octet-stream;
	name="luceneQueryConstructor.js"
Content-Transfer-Encoding: quoted-printable
Content-Disposition: attachment;
	filename="luceneQueryConstructor.js"

# Lucene Search Query Constructor
# Author:  Kelvin Tan  (kelvin@relevanz.com)
# Date:    14/02/2002
# Version: 1.1

// Change this according to what you use to name the field modifiers in =
your form.
// e.g. with the field "name", the modifier will be called =
"nameModifier"
var modifierSuffix =3D 'Modifier';

// Do you wish the query to be displayed as an alert box?
var debug =3D true;

// Constructs the query
// @param query Form field to represent the constructed query to be =
submitted
function doMakeQuery( query )
{
  var frm =3D query.form;
  var formElements =3D frm.elements;
  query.value =3D '';
  for(var i=3D0; i<formElements.length; i++)
  {
    var element =3D formElements[i];
    var elementName =3D element.name;
    var elementValue =3D element.value;
    for(var j=3D0; j<formElements.length; j++)
    {
      var subElement =3D formElements[j];
      if(subElement.name =3D=3D (elementName + modifierSuffix))
      {
        var subElementValue =3D =
subElement.options[subElement.selectedIndex].value;
        if(subElementValue =3D=3D 'And')
        {
          addAnd(query, elementName, elementValue);
        }    =20
        else if(subElementValue =3D=3D 'Not')
        {
          addNot(query, elementName, elementValue);
        }
        else if(subElementValue =3D=3D 'Or')
        {
          addOr(query, elementName, elementValue);
        }
      }
    }
  }
 =20
  if(debug)
  {
    alert('Query:' + query.value);
  }
}

function addOr(query, field, fieldValue)
{
  if(query.value.length =3D=3D 0)
  {
    query.value =3D '(' + field + ':(' + fieldValue + '))';
  }
  else
  {
    query.value =3D query.value + ' (' + field + ':(' + fieldValue + =
'))';
  } =20
}

function addAnd(query, field, fieldValue)
{
  if(query.value.length =3D=3D 0)
  {
    query.value =3D '+(' + field + ':(' + fieldValue + '))';
  }
  else
  {
    query.value =3D query.value + ' +(' + field + ':(' + fieldValue + =
'))';
  } =20
}

function addNot(query, field, fieldValue)
{
  if(query.value.length =3D=3D 0)
  {
    query.value =3D '-(' + field + ':(' + fieldValue + '))';
  }
  else
  {
    query.value =3D query.value + ' -(' + field + ':(' + fieldValue + =
'))';
  } =20
}

