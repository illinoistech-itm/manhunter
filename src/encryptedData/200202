import com.etymon.pj.Pdf;
import com.etymon.pj.exception.InvalidPdfObjectException;
import com.etymon.pj.exception.PjException;
import com.etymon.pj.object.PjArray;
import com.etymon.pj.object.PjObject;
import com.etymon.pj.object.PjPage;
import com.etymon.pj.object.PjStream;
import org.apache.log4j.Category;

import java.io.File;
import java.io.IOException;
import java.util.Vector;

/**
 * <p>
 * Attempts to extract text from a PDF file.
 * </p>
 * <p>
 * <a =
href=3D"http://www.mail-archive.com/lucene-user@jakarta.apache.org/msg002=
80.html">
 * Known limitations</a>
 * </p>
 *
 * @author <a href=3D"mailto:kelvin@relevanz.com">Kelvin Tan</a>
 * @version $Revision: 1.1 $
 */
public class PdfTextExtractor
{
    private static Category cat =3D =
Category.getInstance(PdfTextExtractor.class);

    public static void main(String[] args)
    {
        File f =3D new File("/usr/local/test.pdf");
        try
        {
            Pdf pdf =3D new Pdf(f.toString());
            int pagecount =3D pdf.getPageCount();
            cat.debug(f.toString() + "has " + pagecount + " pages.");
            for (int i =3D 1; i <=3D pagecount; i++)
            {
                System.out.println(getContent(pdf, i));
            }
        }
        catch (IOException ioe)
        {
            cat.error("IOException parsing PDF file:" + f.toString(), =
ioe);
        }
        catch (PjException pje)
        {
            cat.error("PjException parsing PDF file:" + f.toString(), =
pje);
        }
    }

    private static String getContent(Pdf pdf, int pageNo)
    {
        String content =3D null;
        PjStream stream =3D null;
        StringBuffer strbf =3D new StringBuffer();
        try
        {
            PjPage page =3D (PjPage) pdf.getObject(pdf.getPage(pageNo));
            PjObject pobj =3D (PjObject) =
pdf.resolve(page.getContents());
            if (pobj instanceof PjArray)
            {
                PjArray array =3D (PjArray) pobj;
                Vector vArray =3D array.getVector();
                int size =3D vArray.size();
                for (int j =3D 0; j < size; j++)
                {
                    stream =3D (PjStream) pdf.resolve((PjObject) =
vArray.get(j));
                    strbf.append(getStringFromPjStream(stream));
                }
                content =3D strbf.toString();
            }
            else
            {
                stream =3D (PjStream) pobj;
                content =3D getStringFromPjStream(stream);
            }
        }
        catch (InvalidPdfObjectException pdfe)
        {
            cat.error("Invalid PDF Object:" + pdfe, pdfe);
        }
        catch (Exception e)
        {
            cat.error("Exception in getContent() " + e, e);
        }
        return content;
    }

    private static String getStringFromPjStream(PjStream stream)
    {
        StringBuffer strbf =3D new StringBuffer();
        try
        {
            int start,end =3D 0;
            stream =3D stream.flateDecompress();
            String longString =3D stream.toString();
            int strlen =3D longString.length();
            int lastIndex =3D longString.lastIndexOf(')');
            while (lastIndex !=3D -1 && end !=3D lastIndex)
            {
                start =3D longString.indexOf('(', end);
                end =3D longString.indexOf(')', start);
                String text =3D longString.substring(start + 1, end);
                strbf.append(text);
            }
        }
        catch (InvalidPdfObjectException pdfe)
        {
            cat.error("InvalidObjectException:" + pdfe.getMessage(), =
pdfe);
        }
        return strbf.toString();
    }
}


