import org.apache.lucene.search.IndexSearcher;

import org.apache.lucene.search.Query;

import org.apache.lucene.search.TermQuery;

import org.apache.lucene.store.RAMDirectory;

import org.apache.lucene.store.Directory;

import org.apache.lucene.index.Term;

import org.apache.lucene.search.Hits;

import java.awt.*;

import java.awt.event.*;

import javax.swing.*;

import java.io.*;

public class MemorialApp2 extends JApplet implements ActionListener{

JLabel prompt;

JTextField input;

JButton search;

JPanel panel;

String indexDir =3D "C:/Java/lucene/index-list";

private static RAMDirectory idx;

public void init(){

Container cp =3D getContentPane();

panel =3D new JPanel();

panel.setLayout(new FlowLayout(FlowLayout.CENTER, 4, 4));

prompt =3D new JLabel("Keyword search:");

input =3D new JTextField("",20);

search =3D new JButton("Search");

search.addActionListener(this);

panel.add(prompt);

panel.add(input);

panel.add(search);

cp.add(panel);

}

public void actionPerformed(ActionEvent e){

if (e.getSource() =3D=3D search){

String surname =3D (input.getText());

try {

findSurname(indexDir, surname);

} catch(Exception ex) {

System.err.println(ex);

}

}

}

public static void findSurname(String indexDir, String surname) throws =
Exception{

idx =3D new RAMDirectory(indexDir);

IndexSearcher searcher =3D new IndexSearcher(idx);

Query query =3D new TermQuery(new Term("surname", surname));

Hits hits =3D searcher.search(query);

for (int i =3D 0; i < hits.length(); i++) {

//Document doc =3D hits.doc(i);

System.out.println("Surname: " + hits.doc(i).get("surname"));

}

}

}

